{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd whatsapp_services-main/node-api && npm ci"
  },
  "deploy": {
    "startCommand": "cd whatsapp_services-main/node-api && node --no-warnings index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
